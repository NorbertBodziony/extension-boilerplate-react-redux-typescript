{
  "name": "extension-boilerplate-react-redux",
  "version": "0.0.2",
  "description": "A template for creating cross-browser extensions",
  "scripts": {
    "postinstall": "./node_modules/.bin/npm-git install https://github.com/sangwonl/react-chrome-redux.git",
    "lint": "./node_modules/.bin/eslint src config",
    "lint:fix": "npm run lint -- --fix",
    "chrome-build": "cross-env TARGET=chrome gulp",
    "opera-build": "cross-env TARGET=opera gulp",
    "firefox-build": "cross-env TARGET=firefox gulp",
    "build": "cross-env NODE_ENV=production npm run chrome-build && cross-env NODE_ENV=production npm run opera-build && cross-env NODE_ENV=production npm run firefox-build",
    "chrome-watch": "cross-env TARGET=chrome gulp watch",
    "opera-watch": "cross-env TARGET=opera gulp watch",
    "firefox-watch": "cross-env TARGET=firefox gulp watch",
    "chrome-dist": "cross-env NODE_ENV=production cross-env TARGET=chrome gulp dist",
    "opera-dist": "cross-env NODE_ENV=production cross-env TARGET=opera gulp dist",
    "firefox-dist": "cross-env NODE_ENV=production cross-env TARGET=firefox gulp dist",
    "dist": "npm run lint && npm run chrome-dist && npm run opera-dist && npm run firefox-dist",
    "webpack-chrome": "cross-env TARGET=chrome node compile/build.js",
    "webpack-opera": "cross-env TARGET=opera node compile/build.js",
    "webpack-firefox": "cross-env TARGET=firefox node compile/build.js",
    "webpack": "cross-env NODE_ENV=production npm run webpack-chrome && cross-env NODE_ENV=production npm run webpack-opera && cross-env NODE_ENV=production npm run webpack-firefox"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EmailThis/extension-boilerplate"
  },
  "author": "Bharani <bharani91@gmail.com> (https://github.com/bharani91)",
  "bugs": {
    "url": "https://github.com/EmailThis/extension-boilerplate/issues"
  },
  "homepage": "https://www.emailthis.me/extension-boilerplate",
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-core": "^6.1.2",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "event-stream": "^3.3.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^6.1.0",
    "gulp-clean": "^0.3.1",
    "gulp-eslint": "^2.0.0",
    "gulp-if": "^2.0.2",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^0.5.3",
    "gulp-merge-json": "^1.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-run-sequence": "*",
    "gulp-sass": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.4",
    "gulp-zip": "^2.0.3",
    "html-webpack-plugin": "^2.29.0",
    "npm-git-install": "^0.3.0",
    "ora": "^1.3.0",
    "preprocessify": "^1.0.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-merge": "^4.1.0"
  }
}
